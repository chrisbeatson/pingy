# Pingy Configuration
# Copy this file to .env and fill in your values

# Target Configuration
# Path to file containing target IPs (one per line)
TARGET_FILE=targets.txt

# Data Sink Configuration
# Choose which backend to use: elasticsearch, redis
SINK_TYPE=elasticsearch

# Elasticsearch Configuration (when SINK_TYPE=elasticsearch)
# Note: Make sure to use a datastream with an appropriate lifecycle policy
ES_CLOUD_ID=your-cloud-id-here
ES_API_KEY_ID=your-api-key-id-here
ES_API_KEY=your-api-key-secret-here
ES_INDEX=your-datastream-name

# Redis Configuration (when SINK_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=86400           # Data retention in seconds (default: 24 hours)

# Monitoring Configuration
PING_INTERVAL=15          # Seconds between ping cycles
REFRESH_INTERVAL=60       # Seconds between re-reading target file
NUM_WORKERS=100           # Number of concurrent ping workers

# Logging
LOG_LEVEL=INFO            # DEBUG, INFO, WARNING, ERROR
